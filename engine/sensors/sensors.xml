        <iparams    value = "1" />
        <params     value = "" />
        <notifier   value = "" />
        <niparams   value = "" />
        <nparams    value = "" />
    </sensor>

    <sensor name="ambient_temp" >
        <enabled    value = "1" />
        <min        value = "0" />
        <max        value = "60" />
        <refresh    value = "180" />
        <script     value = "tempergold" />
        <iparams    value = "" />
        <params     value = "" />
        <notifier   value = "" />
        <niparams   value = "/dev/ttyACM0,+393916263900" />
        <nparams    value = "+393355351272" />
    </sensor>


