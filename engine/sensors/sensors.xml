<main>

    <!--
        Each sensor have:
        enabled  : 1=monitor active, 0=monitor deactive
        min      : min value allowed
        max      : max value allowed
        refresh  : seconds between survey
        script   : python module name to access to sensor
        iparams  : init function parameters
        params   : execute function parameters
        notifier : python module name to notify out of range
        niparams : notifier init function parameters
        nparams  : notifier send notify function parameters
    -->    
    
    <sensor name="cpu0_temperature" >
        <enabled    value = "1" />
        <min        value = "0" />
        <max        value = "60" />
        <refresh    value = "180" />
        <script     value = "cputemp" />
        <iparams    value = "0" />
        <params     value = "" />
        <notifier   value = "" />
        <niparams   value = "" />
        <nparams    value = "" />
    </sensor>
    
    <sensor name="cpu1_temperature" >
        <enabled    value = "1" />
