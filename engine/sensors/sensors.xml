<main>

    <!--
        Each sensor have:
        enabled : 1=monitor active, 0=monitor deactive
        min     : min value allowed
        max     : max value allowed
        refresh : seconds between survey
        script  : python script name to recall
        params  : command line argument  
    -->    
    
    <sensor name="cpu0_temperature" >
        <enabled    value = "1" />
        <min        value = "-20" />
        <max        value = "80" />
        <refresh    value = "180" />
        <script     value = "cputemp" />
        <params     value = "0" />
        <notifier   value = "" />
        <nparams    value = "" />
    </sensor>
    
    <sensor name="cpu1_temperature" >
        <enabled    value = "1" />
        <min        value = "-20" />
        <max        value = "80" />
        <refresh    value = "180" />
        <script     value = "cputemp" />
        <params     value = "1" />
        <notifier   value = "" />
        <nparams    value = "" />
    </sensor>

    <sensor name="cpu_temperature" >
        <enabled    value = "1" />
        <min        value = "-20" />
        <max        value = "43" />
        <refresh    value = "300" />
        <script     value = "cputemperature" />
        <params     value = "0" />
        <notifier   value = "" />
        <nparams    value = "" />    
    </sensor>


    <sensor name="cpu0_tempother" >
        <enabled    value = "1" />
        <min        value = "-20" />
        <max        value = "80" />
        <refresh    value = "300" />
        <script     value = "cputempother" />
        <params     value = "0" />
        <notifier   value = "" />
        <nparams    value = "" />    
    </sensor>

</main>
